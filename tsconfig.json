{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["greasemonkey"]
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
